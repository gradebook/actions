{
  "name": "@gradebook/actions",
  "version": "0.0.1",
  "main": "index.js",
  "alias": "gb",
  "repository": "https://github.com/gradebook/actions",
  "authors": [
    "Josh Costa <joshcosta38@tamu.edu>",
    "Vikas Potluri <vikaspotluri123.github@gmail.com>",
    "Ramsay Smith <ramsaysmith@outlook.com>"
  ],
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "xo"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "xo": "0.54.2"
  },
  "xo": {
    "rules": {
      "@typescript-eslint/naming-convention": "off",
      "func-names": [
        "error",
        "as-needed"
      ],
      "no-use-extend-native/no-use-extend-native": "off",
      "func-name-matching": "off",
      "no-console": "error"
    },
    "overrides": [
      {
        "files": "test/**/*.js",
        "envs": [
          "node",
          "mocha"
        ],
        "rules": {
          "func-names": "off",
          "prefer-arrow-callback": "off",
          "no-unused-expressions": "off"
        }
      }
    ]
  }
}
